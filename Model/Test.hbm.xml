<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="NHibernateCourse.QuickStart.Model"
                   assembly="NHibernateCourse.QuickStart"
                   >
  <class name="Test" table="Tests" batch-size="10">
    <cache usage="read-write"/>
    <id name="Id">
      <generator class="identity"/>
    </id>
    <version name="Timestamp" 
             generated="always"
             type="BinaryBlob"
             unsaved-value="null">
      <column name="Timestamp"
              sql-type="timestamp"
              />
    </version>
    <property name="Score" />
    <many-to-one name="Student" class="Student" />

    <map name="Penalties" table="TestPenalties">
      <cache usage="read-write"/>
      <key column="TestId"/>
      <index column="TheKey" type="System.String"/>
      <many-to-many column="PenaltyId" class="Penalty" />
    </map>
  </class>
  
</hibernate-mapping>