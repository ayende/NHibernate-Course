<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="NHibernateCourse.QuickStart.Model"
                   assembly="NHibernateCourse.QuickStart"
                   >
  <class name="Student" table="Students">
    <id name="Id">
      <generator class="identity"/>
    </id>
    <property name="Name"/>
    <property name="Age"/>
    <property name="IsBuly"/>
    <set name="Tests" cascade="all" inverse="true">
      <key column ="Student"/>
      <one-to-many class="Test"/>
    </set>
    <list name="EmergencyPhones" table="EmergencyPhone" inverse="true">
      <key column="StudentId" />
      <index column="Position"/>
      <one-to-many class="EmergencyPhone"/>
    </list>
  </class>

  <class name="EmergencyPhone">
    <composite-id>
      <key-property name="StudentId"/>
      <key-property name="Position"/>
    </composite-id>
    <property name="Phone"/>
    <property name="NameOfCallee"/>
    <property name="SpokenLanguage"/>
  </class>
  
</hibernate-mapping>