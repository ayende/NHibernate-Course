<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="NHibernateCourse.QuickStart.Model"
                   assembly="NHibernateCourse.QuickStart"
                   >
  <class name="File" table="Files">
    <id name="Id">
      <generator class="identity"/>
    </id>
    <property name="Name"/>

    <joined-subclass name="Graphic">
      <key column="FileId"/>

      <property name="Type"/>
      
      <joined-subclass name="Final">
        <key column="FileId"/>

        <property name="ColorDepth"/>
      </joined-subclass>

      <joined-subclass name="Rough">
        <key column="FileId"/>

        <property name="Height"/>
        <property name="Width"/>
      </joined-subclass>
    </joined-subclass>

  </class>



</hibernate-mapping>